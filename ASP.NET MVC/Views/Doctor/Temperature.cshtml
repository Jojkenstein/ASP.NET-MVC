@{
    ViewData["Title"] = "Temperature";
}

<h1>Temperature</h1>

<form asp-action="Temperature" mehod="post">
    <label>Please enter your measured body temperature: </label>
    <input type="number" step="0.01" name="temperature" />

    <label>
        &#8451
        <input type="radio" checked="checked" name="scale" value="C" />
    </label>
    <label>
        &#8457
        <input type="radio" name="scale" value="F" />
    </label>

    <input type="submit" value="Check temperature" />
</form>

@if (ViewBag.Result != null)
{
    <p>@ViewBag.Result</p>
}